extends ./layout

block content
  h2 Login
  form(action="/auth/login" method="POST" onclick="onClick()") 
    #error.my-2.text-error #{message}
    .mb-3
      label.form-label(for='Username') Username
      input#Username.form-control(type='text'  name="username")
    .mb-3
      label.form-label(for='Password') Password
      input#Password.form-control(type='password' name="password")
    button.btn.btn-success(type='submit') Login

  script.
    var error = new URL(window.location.href).searchParams.get('error');
    if (!!error) {
      alert(error);
    } 
    function onClick() {
      document.getElementById('error').innerHTML = ''
    }
    //- setTimeout(onClick, 1500)
